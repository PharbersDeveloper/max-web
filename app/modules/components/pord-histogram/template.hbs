{{yield}}
<div local-class="progress" class="container-fluid">
    <div local-class="left" class="col-md-6 col-sm-6 col-xs-6">
        <div class="col-md-2 col-sm-2 col-xs-2" local-class="first">
                <p local-class="title">{{data.no}} </p>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4" local-class="second">
                <p local-class="subtitle">{{data.prod}}</p>
                <p local-class="manu">{{data.manu}}</p>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6" local-class="triangle">
            {{#if (gte data.growth 0)}}
                <span local-class='growth' class='glyphicon glyphicon-triangle-top'></span> <span>{{data.growth}}</span>
            {{else}}
                <span local-class="down" class="glyphicon glyphicon-triangle-bottom"></span><span>{{data.growth}}</span>
            {{/if}}
        </div>
    </div>
    <div local-class="right" class="col-md-6 col-sm-6 col-xs-6">
        {{#bs-progress local-class="total"  as |p|}}
            {{p.bar value=data.value  minValue=0 maxValue=theMax}}
        {{/bs-progress}}
    </div>
</div>
<div local-class="div-line"></div>
