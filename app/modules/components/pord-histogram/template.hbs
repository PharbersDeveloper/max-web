{{yield}}
<div local-class="progress" class="container-fluid">
    <div local-class="left" class="col-md-4 col-sm-4 col-xs-4">
        <div class="col-md-8 col-sm-8 col-xs-8">
            <p local-class="title">{{data.no}} <span>{{data.prod}}</span></p>
            <p local-class="manu">{{data.manu}}</p>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4" local-class="triangle">
            {{#if (gte data.growth 0)}}
                <span local-class='growth' class='glyphicon glyphicon-triangle-top'></span> <span>{{data.growth}}</span>
            {{else}}
                <span local-class="down" class="glyphicon glyphicon-triangle-bottom"></span><span>{{data.growth}}</span>
            {{/if}}
        </div>
    </div>
    <div local-class="right" class="col-md-8 col-sm-8 col-xs-8">
        {{#bs-progress local-class="total"  as |p|}}
            {{p.bar value=data.value  minValue=10 maxValue=50}}
        {{/bs-progress}}
    </div>
</div>
