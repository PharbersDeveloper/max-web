{{step-flow stepOne=true stepTwo=false stepThree=false stepFour=false}}
{{#layout-push direction='row' classNames="layout-flex-outer"}}
	{{#layout-push direction='row' classNames="layout-flex-inner"}}
		{{upload-file-panel next=(action 'next')}}
	{{/layout-push}}
{{/layout-push}}
{{#bs-modal
	fade=false 
	backdropClose=false 
	open=marketAndTime 
	onHidden=(action (mut marketAndTime) false) as |modal|}}
	{{#modal.header}}
		<h4 class="modal-title">
			输入市场以及时间
		</h4>
	{{/modal.header}}
	{{#modal.body}}
		<p>请选择市场 <span></span> </p>
		{{!-- <p>{{input type="text" value=panelMarket}}</p> --}}
		{{!-- {{base-select title="" selected=market onChange=(action 'chooseMarket' value=target.value) options=markets}} --}}
		<select name="markets" local-class="choose-market" onchange={{action 'chooseMarket' value="target.value"}}>
			{{#each markets as |item|}}
				<option value={{item}}>{{item}}</option>
			{{/each}}
		</select>
		<p>请输入时间 <span>(例如：201801)</span> </p>
		<p>{{input local-class="input-time" type="text" value=panelMonth}}</p>
	{{/modal.body}}
	{{#modal.footer}}
		{{#bs-button class="btn-only-text" onClick=(action modal.close)}}取消{{/bs-button}}
		{{#bs-button onClick=(action 'nextStep' )}}确定{{/bs-button}}
	{{/modal.footer}}
{{/bs-modal}}